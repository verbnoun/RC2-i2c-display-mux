# Raspberry Pi Pico Development Environment
# Source this file: source .env

# Pico SDK
export PICO_SDK_PATH="/Users/jackson/Documents/Projects/Attach Part/Product/SoftwareC/pico-sdk"
export PICO_TOOLCHAIN_PATH="/usr/local/bin"

# Default board configuration
export PICO_BOARD="pico2"
export PICO_PLATFORM="rp2350-arm-s"

# Build tools
export CMAKE_PATH="/opt/homebrew/bin/cmake"
export NINJA_PATH="/opt/homebrew/bin/ninja"
export PYTHON3_PATH="/opt/homebrew/Caskroom/miniconda/base/bin/python3"
export GIT_PATH="/opt/homebrew/bin/git"

# ARM GCC Toolchain
export ARM_GCC_PATH="/usr/local/bin"
export PICO_COMPILER_PREFIX="arm-none-eabi-"

# Build configuration
export CMAKE_BUILD_TYPE="Release"
export PICO_COPY_TO_RAM=0

# SoftwareC Infrastructure Paths (NEW: Eliminates relative path hell)
export PROJECT_ROOT="/Users/jackson/Documents/Projects/Attach Part/Product/SoftwareC"
export LIBRARIES_PATH="$PROJECT_ROOT/libraries"

# Custom tools
export PICO_TOOLS_PATH="$PROJECT_ROOT/pico-tools"
export PICO_TEMPLATES_PATH="$PICO_TOOLS_PATH/templates"
export PATH="$PICO_TOOLS_PATH/bin:$PATH"

# Development settings
export PICO_STDIO_USB=1
export PICO_STDIO_UART=0

echo "Pico development environment loaded!"
echo "SDK Path: $PICO_SDK_PATH"
echo "Board: $PICO_BOARD"
echo "Platform: $PICO_PLATFORM"